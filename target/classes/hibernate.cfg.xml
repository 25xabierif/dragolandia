<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Conexión JDBC a MySQL en Docker -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/dragolandia</property>
        <property name="hibernate.connection.username">dam2user</property>
        <property name="hibernate.connection.password">1234..</property>

        <!-- Dialecto de MySQL -->
        <!-- <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property> -->

        <!-- Configuraciones de Hibernate -->
        <property name="hibernate.hbm2ddl.auto">update</property> 
        

        <!-- Hibernate crea/actualiza automaticamente las tablas -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>


        <!-- Para que funcione el método getCurrentSession-->
        <property name="hibernate.current_session_context_class">thread</property>

        <!-- Registrar entidades -->
        <mapping class="dragolandia.model.Monstruo"/>
        <mapping class="dragolandia.model.Mago"/>
        <mapping class="dragolandia.model.Bosque"/>
        <mapping class="dragolandia.model.Dragon"/>
        <mapping class="dragolandia.model.hechizos.Hechizo"/>
        <mapping class="dragolandia.model.hechizos.BolaFuego"/>
        <mapping class="dragolandia.model.hechizos.BolaNieve"/>
        <mapping class="dragolandia.model.hechizos.Debilitar"/>
        <mapping class="dragolandia.model.hechizos.Escudo"/>
        <mapping class="dragolandia.model.hechizos.Rayo"/>


        
    </session-factory>
</hibernate-configuration>